# ========================================
# COMPANY FORUM - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env file to git!

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=company_forum

# ========================================
# JWT AUTHENTICATION
# ========================================
# IMPORTANT: Change these secrets in production!
# Generate secure keys: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters-long-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3001,http://localhost:3000

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=52428800
# 50MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,zip,mp4,mov,avi
MAX_IMAGES_PER_POST=10
MAX_VIDEOS_PER_POST=5

# ========================================
# STORAGE CONFIGURATION
# ========================================
# Options: local, s3, minio
STORAGE_TYPE=local

# For AWS S3 (production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# For MinIO (self-hosted S3-compatible)
MINIO_ENDPOINT=
MINIO_PORT=9000
MINIO_USE_SSL=false

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=Company Forum <noreply@company.com>

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=60000
# 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window
AUTH_RATE_LIMIT_MAX=100
# Auth endpoints (was 5, increased for testing)

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WS_PING_INTERVAL=25000
# 25 seconds
WS_PING_TIMEOUT=60000
# 60 seconds

# ========================================
# PAGINATION
# ========================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ========================================
# REAL-TIME FEATURES
# ========================================
TYPING_INDICATOR_TIMEOUT=10000
# 10 seconds
ONLINE_USER_CACHE_TTL=300
# 5 minutes

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================
NOTIFICATION_BATCH_SIZE=50

# ========================================
# BACKGROUND JOBS
# ========================================
BULL_REDIS_PREFIX=forum_queue

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
# Options: error, warn, info, debug
LOG_DIR=./logs

# ========================================
# DEVELOPMENT DEBUG
# ========================================
DEBUG=app:*
