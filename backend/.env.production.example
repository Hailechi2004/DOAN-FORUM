# Environment Configuration - Production
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-db-host.com
DB_PORT=3306
DB_NAME=company_forum_prod
DB_USER=forum_user_prod
DB_PASSWORD=STRONG_PASSWORD_HERE_MINIMUM_20_CHARS
DB_ROOT_PASSWORD=STRONG_ROOT_PASSWORD_HERE_MINIMUM_20_CHARS
DB_POOL_MIN=5
DB_POOL_MAX=50

# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD_HERE_MINIMUM_20_CHARS

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MINIMUM_32_CHARACTERS_LONG
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING_MINIMUM_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com,https://app.your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/var/www/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,zip,mp4,mov,avi
MAX_IMAGES_PER_POST=10
MAX_VIDEOS_PER_POST=5

# Storage Configuration - Use S3 or MinIO for production
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_BUCKET=your-forum-bucket
# CDN URL (optional, for CloudFront or similar)
CDN_URL=https://cdn.your-domain.com

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=Company Forum <noreply@your-domain.com>

# WebSocket Configuration
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MINIMUM_32_CHARS

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/forum

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Real-time Features
TYPING_INDICATOR_TIMEOUT=10000
ONLINE_USER_CACHE_TTL=300

# Notification Configuration
NOTIFICATION_BATCH_SIZE=50

# Background Jobs
BULL_REDIS_PREFIX=forum_queue_prod

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance
NODE_CLUSTER_WORKERS=0
# 0 = auto (CPU cores)
